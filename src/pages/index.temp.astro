---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';

const featuredProjects = config.projects.filter((project: any) => project.featured);
const featuredAchievements = config.achievements.filter((achievement: any) => achievement.featured);
---

<Layout title={config.name}>
  <div class="container" id="thingy">
    <section class="section">
      <div class="hero">
        <h1>{config.name}</h1>
        <p>{config.title}</p>
      </div>
      <div class="hero">
        <p>{config.description}</p>
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Skills</h2>
      <div class="skills-grid">
        {config.skills.map((skill: any) => (
          <div class="skill-card">
            <h3>{skill.name}</h3>
            <p>{skill.level}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Hobbies</h2>
      <div class="skills-grid" id="hobbies-grid">
        {config.hobbies.map((hobbies: any) => (
          <div class="skill-card">
            <h3>{hobbies}</h3>
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Featured Projects</h2>
      <div class="projects-grid">
        {featuredProjects.map((project: any) => (
          <a href={`/projects#${project.id}`} class="project-card">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
          </a>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Featured Achievements</h2>
      <div class="projects-grid">
        {featuredAchievements.map((achievement: any) => (
          <a href={`/achievements#${achievement.id}`} class="project-card">
            <div class="achievement-image">
              <img
                src={achievement.image}
                alt={achievement.title}
              />
            </div>
            <h3>{achievement.title}</h3>
            <p>{achievement.description}</p>
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
